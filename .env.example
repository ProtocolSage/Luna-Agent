# Luna Agent Production Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=production
APP_NAME=Luna Agent
APP_VERSION=1.0.0
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://luna_user:luna_secure_pass_2024@localhost:5432/luna_agent
DB_HOST=localhost
DB_PORT=5432
DB_NAME=luna_agent
DB_USER=luna_user
DB_PASSWORD=luna_secure_pass_2024
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_URL=redis://:luna_redis_2024@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=luna_redis_2024
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# WebSocket
WS_PORT=3002
WS_PATH=/ws

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.csv,.json,.xml,.jpg,.jpeg,.png,.gif

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m
HELMET_CSP=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
ENABLE_TRACING=true
TRACING_ENDPOINT=http://localhost:4318

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Luna Agent <noreply@luna-agent.com>

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# Feature Flags
ENABLE_VOICE=true
ENABLE_TOOLS=true
ENABLE_ANALYTICS=true
ENABLE_AUTO_SAVE=true

# External Services
WEATHER_API_KEY=your-weather-api-key
NEWS_API_KEY=your-news-api-key
MAPS_API_KEY=your-maps-api-key