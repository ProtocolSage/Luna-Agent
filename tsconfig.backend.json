{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@agent/*": ["agent/*"],
      "@memory/*": ["memory/*"],
      "@backend/*": ["backend/*"],
      "@types/*": ["types/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "backend/**/*.ts",
    "agent/**/*.ts",
    "memory/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "app/renderer/**"
  ]
}
