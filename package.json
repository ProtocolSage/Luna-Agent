{
  "name": "luna-agent",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready AI agent with voice interface and multi-LLM support",
  "main": "dist/app/main/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "typecheck": "tsc --noEmit",
    "start": "npm run build:prod && electron dist/app/main/main.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:offline": "jest --passWithNoTests --testPathIgnorePatterns=integration",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "package": "npm run build && electron-builder --publish never",
    "package:win": "npm run build && electron-builder --win --publish never",
    "package:mac": "npm run build && electron-builder --mac --publish never",
    "package:linux": "npm run build && electron-builder --linux --publish never",
    "dev": "concurrently \"npm run build:dev -- --watch\" \"wait-on dist/app/main/main.js && electron dist/app/main/main.js\"",
    "clean": "rimraf dist coverage"
  },
  "build": {
    "appId": "com.manus.luna-agent",
    "productName": "Luna Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "ProtocolSage",
      "repo": "luna-agent"
    }
  },
  "keywords": [
    "ai",
    "agent",
    "voice",
    "llm",
    "electron"
  ],
  "author": "Manus.IM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProtocolSage/luna-agent.git"
  },
  "bugs": {
    "url": "https://github.com/ProtocolSage/luna-agent/issues"
  },
  "homepage": "https://github.com/ProtocolSage/luna-agent#readme",
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.1",
    "css-loader": "^7.1.2",
    "electron": "^28.3.2",
    "electron-builder": "^24.13.3",
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node-schedule": "^2.1.8",
    "@types/sqlite3": "^3.1.8",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "node-schedule": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "yargs": "^18.0.0"
  }
}
