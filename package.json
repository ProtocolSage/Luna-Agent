{
  "name": "luna-agent-production",
  "version": "1.0.1",
  "description": "Production-Ready AI Assistant with Voice Interface",
  "main": "dist/bootstrap.cjs",
  "homepage": "./",
  "author": "Luna Agent Team",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json && node scripts/write-bootstrap.cjs",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:renderer": "node scripts/build-renderer.js",
    "copy:assets": "node scripts/copy-assets.js",
    "build": "rimraf dist && npm run build:main && npm run build:preload && npm run build:backend && npm run build:renderer && npm run copy:assets",
    "backend": "node dist/backend/server.js",
    "electron": "node scripts/launch-electron.cjs",
    "start": "npm run dev:full",
    "dev": "node scripts/launch-electron.cjs",
    "dev:full": "concurrently -k -n BACKEND,ELECTRON -c blue,magenta \"node dist/backend/server.js\" \"node scripts/launch-electron.cjs\"",
    "dist": "npm run build && electron-builder --win --x64",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test:ci": "jest --ci --runInBand",
    "prepare": "husky install",
    "postinstall": "node scripts/postinstall.js"
  },
  "build": {
    "appId": "com.yourco.luna",
    "productName": "Luna Agent",
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/.cache/**",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist-electron"
    },
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "Luna-Agent-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cheerio": "^0.22.35",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.6.3",
    "@types/node-fetch": "^2.6.13",
    "@types/node-schedule": "^2.1.8",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.5",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "cross-fetch": "^4.1.0",
    "css-loader": "^7.1.2",
    "electron": "^28.3.2",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.25.9",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "style-loader": "^4.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.101.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@picovoice/porcupine-web": "^3.0.3",
    "@types/three": "^0.179.0",
    "abort-controller": "^3.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.279.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "openai": "^5.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.179.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.1",
    "yargs": "^18.0.0"
  },
  "optionalDependencies": {
    "mongoose": "^7.5.0",
    "pg": "^8.11.3",
    "redis": "^4.6.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check",
      "pre-push": "npm run test:ci"
    }
  },
  "keywords": [
    "ai",
    "assistant",
    "voice",
    "electron",
    "react",
    "production",
    "desktop",
    "speech-recognition",
    "text-to-speech",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/luna-agent/luna-agent-production.git"
  },
  "bugs": {
    "url": "https://github.com/luna-agent/luna-agent-production/issues"
  },
  "_moduleAliases": {
    "@agent": "dist/agent"
  }
}
