# Luna Agent Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key for GPT models
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for Claude models
# Get your key from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs API Key for Voice (Nova Westbrook)
# Get your key from: https://elevenlabs.io/app/speech-synthesis
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# Cloud Speech-to-Text Configuration
# Azure Speech Services (Primary choice)
# Get your key from: https://portal.azure.com -> Cognitive Services -> Speech
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Deepgram API Key (Alternative cloud STT)
# Get your key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# STT Engine Configuration
CLOUD_STT_SERVICE=azure
STT_PREFER_LOCAL=false

# Server Configuration
PORT=3000
NODE_ENV=development
# Optional: Override the backend API URL for Electron voice handler (default connects to localhost on PORT)
BACKEND_URL=http://localhost:3000

# Optional: Voice Configuration
VOICE_ENABLED=true
VOICE_LANGUAGE=en-US
STT_PROVIDER=hybrid
VOICE_AUTO_LISTEN=false
VOICE_ACTIVITY_DETECTION=true
WAKE_WORD=luna
